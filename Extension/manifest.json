{
  "manifest_version": 2,
  "name": "Bookmark2md",
  "version": "1.0.0",
  "default_locale": "zh_CN",
  "description": "__MSG_description__",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Bookmark2md",
    "default_popup": "html/popup.html"
  },
  "author": "OXOYO",
//  "background": {
//    // 2种指定方式，如果指定JS，那么会自动生成一个背景页
//    "page": "html/background.html",
//    //"scripts": ["js/background.js"],
//    // Recommended
//    "persistent": false
//  },
  // 权限申请
  "permissions": [
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    },
    "bookmarks",
    "notifications",
    "tabs",
    "https://github.com/",
    "storage",
    "activeTab",
    "identity"
  ],
  "homepage_url": "https://github.com/OXOYO/bookmark2md",
  "content_scripts": [
    {
      "matches": ["https://github.com/robots.txt*"],
      "js": ["lib/oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    }
  ],
  // 选项页 Chrome < 40
  "options_page": "html/options.html",
  // 选项页 Chrome > 40
  "options_ui": {
    "page": "html/options.html",
    // 添加一些默认的样式，推荐使用
    "chrome_style": false
  },
  // 默认语言
  "default_locale": "zh_CN",
  "web_accessible_resources": [
    "lib/oauth2/oauth2.html"
  ]
}
